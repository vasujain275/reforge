ADDR=':8080'
ENV='dev'
GOOSE_DBSTRING='file:./data/reforge.db?_pragma=journal_mode(WAL)&_pragma=foreign_keys(ON)'
GOOSE_DRIVER='sqlite'
GOOSE_MIGRATION_DIR='./internal/adapters/sqlite/migrations'
JWT_SECRET='super-secret-default-key'

# Default Scoring Algorithm Weights (7-feature deterministic scoring)
# These values should sum to 1.0 for optimal scoring
DEFAULT_W_CONF='0.30'
DEFAULT_W_DAYS='0.20'
DEFAULT_W_ATTEMPTS='0.10'
DEFAULT_W_TIME='0.05'
DEFAULT_W_DIFFICULTY='0.15'
DEFAULT_W_FAILED='0.10'
DEFAULT_W_PATTERN='0.10'

# ============================================================================
# ADMIN SEEDING CONFIGURATION
# ============================================================================
# SECURITY WARNING: Change these values before deploying to production!
# These credentials are ONLY used if no admin user exists on application startup.
# After the admin is seeded, you can change the password via the admin UI.

SEED_ADMIN_EMAIL='admin@reforge.local'
SEED_ADMIN_NAME='System Administrator'
SEED_ADMIN_PASSWORD='ChangeMeImmediately123!'

# ============================================================================
# APPLICATION SIGNUP SETTINGS
# ============================================================================
# These control the default state of user registration.
# Admins can change these settings at runtime via the admin dashboard.

# Allow new user registrations (true/false)
DEFAULT_SIGNUP_ENABLED='true'

# When signup is disabled, allow admin-generated invite codes (true/false)
DEFAULT_INVITE_CODES_ENABLED='true'
